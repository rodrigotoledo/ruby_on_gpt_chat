<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('.sign_up', default: "Cadastre-se"), new_registration_path(resource_name), class: "block text-center px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 focus:outline-none focus:text-gray-900 focus:bg-gray-50 transition ease-in-out duration-150 mt-4 md:mt-0 md:ml-4" %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('.forgot_your_password', default: "Esqueceu sua senha?"), new_password_path(resource_name), class: "block text-center px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 focus:outline-none focus:text-gray-900 focus:bg-gray-50 transition ease-in-out duration-150 mt-4 md:mt-0 md:ml-4" %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('.confirmation_instructions', default: "Não recebeu as instruções de confirmação?"), new_confirmation_path(resource_name), class: "block text-center px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 focus:outline-none focus:text-gray-900 focus:bg-gray-50 transition ease-in-out duration-150 mt-4 md:mt-0 md:ml-4" %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('.unlock', default: "Desbloquear sua conta"), new_unlock_path(resource_name), class: "block text-center px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 focus:outline-none focus:text-gray-900 focus:bg-gray-50 transition ease-in-out duration-150 mt-4 md:mt-0 md:ml-4" %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t('.sign_in_with', default: "Entrar com %{provider}", provider: provider.to_s.titleize), omniauth_authorize_path(resource_name, provider), class: "block text-center px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 focus:outline-none focus:text-gray-900 focus:bg-gray-50 transition ease-in-out duration-150 mt-4 md:mt-0 md:ml-4" %>
  <% end %>
<% end -%>
