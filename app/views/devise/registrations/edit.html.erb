<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md">
    <h2 class="text-center font-bold text-2xl mb-4">Editar perfil</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>
      <%= f.hidden_field :email %>
      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.text_field :name, autocomplete: "name", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= f.label :current_password, "Senha atual", class: "block text-gray-700 font-bold mb-2" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, "Nova senha", class: "block text-gray-700 font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirmar nova senha", class: "block text-gray-700 font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit "Salvar alterações", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>
