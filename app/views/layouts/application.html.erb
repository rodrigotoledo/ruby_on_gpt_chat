<!DOCTYPE html>
<html>
  <head>
    <title>ChatGPT</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="bg-gray-200">
    <header class="bg-gray-600 text-white py-4 fixed top-0 left-0 right-0 z-50">
      <nav class="container mx-auto flex justify-between items-center">
        <%= link_to 'ChatGPT', root_path, class: 'text-xl font-bold' %>

        <% if user_signed_in? %>
          <div class="flex items-center">
            <%= link_to 'Minhas salas', root_path, class: 'mr-4' %>
            <%= link_to 'Sair', destroy_user_session_path, method: :delete %>
          </div>
        <% else %>
          <div class="flex items-center">
            <%= link_to 'Entrar', new_user_session_path, class: 'mr-4' %>
            <%= link_to 'Cadastrar', new_user_registration_path %>
          </div>
        <% end %>
      </nav>
    </header>

    <main class="container mx-auto my-16">
      <%= yield %>
    </main>

    <footer class="bg-gray-600 text-white py-4 fixed bottom-0 left-0 right-0 z-50">
      <div class="container mx-auto">
        <p class="text-center">&copy; ChatGPT 2023</p>
      </div>
    </footer>
  </body>
</html>
